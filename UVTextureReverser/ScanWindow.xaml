<Window x:Class="UVTextureReverser.ScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UVTextureReverser"
        mc:Ignorable="d"
        Title="Projexture - Scanning (18 of 18)" Height="100" Width="365" Topmost="True" ResizeMode="NoResize">
    <DockPanel>
        <Label Content="Click &quot;Next&quot; when the in-game model texture changes." HorizontalAlignment="Stretch" DockPanel.Dock="Top" Height="Auto"/>
        <DockPanel DockPanel.Dock="Bottom">
            <Label Name="scanStatus" Content="Scanning: Horizontal 1024 (18 of 18)" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
            <Button DockPanel.Dock="Right" Name="NextButton" Content="Next" HorizontalAlignment="Right"  VerticalAlignment="Center" Padding="15,2,15,2" Margin="5" Click="NextButton_Click" IsDefault="True" />
            <Button DockPanel.Dock="Right" Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="5,2,5,2" Margin="5" Click="CancelButton_Click"/>
        </DockPanel>
    </DockPanel>

</Window>
