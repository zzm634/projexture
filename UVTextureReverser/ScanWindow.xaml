<Window x:Class="UVTextureReverser.ScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UVTextureReverser"
        mc:Ignorable="d"
        Title="Projexture - Scanning (18 of 18)" Height="100" Width="365" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <Label Content="Click &quot;Next&quot; when the in-game model texture changes." HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Name="scanStatus" Content="Scanning: Horizontal 1024 (18 of 18)" HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top" Width="220"/>
        <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="220,29,0,0" VerticalAlignment="Top" Padding="1" Width="40" Click="CancelButton_Click"/>
        <Button Name="NextButton" Content="Next" HorizontalAlignment="Left" Margin="270,27,0,0" VerticalAlignment="Top" Width="60" Height="24" Click="NextButton_Click"/>

    </Grid>
</Window>
